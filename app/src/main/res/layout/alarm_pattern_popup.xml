<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pattern_popup_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popup_bg"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/pattern_popup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:textColor="@color/text_color_primary"/>

    <TextView
        android:id="@+id/pattern_popup_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap to start the Pattern Puzzle"
        android:textSize="16sp"
        android:layout_marginBottom="32dp"
        android:textColor="@color/text_color_secondary"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/btn_start_pattern_puzzle"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Pattern Puzzle"
        android:backgroundTint="@color/primary"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textSize="18sp"
        android:elevation="4dp"
        android:background="@drawable/popup_button_bg"/>

</LinearLayout>
